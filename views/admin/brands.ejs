<%- include('../../views/partials/admin/header') %>

<div class="wrapper">
  <%- include('../../views/partials/admin/sidebar') %>

  <div class="container">
    <h1 class="my-4">Manage Brands</h1>

    <form method="GET" class="d-flex justify-content-between mb-3">
      <div class="input-group col-md-8">
        <input
          type="text"
          class="form-control"
          name="search"
          placeholder="Search by name"
          aria-label="Search"
          aria-describedby="basic-addon2"
        />
        <button class="btn btn-primary" type="submit">Search</button>
      </div>

      <button class="btn btn-dark" style="width: 150px" type="button">
        <a
          href="/admin/brands/add-brand"
          class="text-white"
          style="text-decoration: none"
          >Add Brand</a
        >
      </button>
    </form>

    <!-- Table Container -->
    <div class="table-container">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Brand Name</th>
            <th>Brand Logo</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="userTable">
          <% for(let i = 0; i < data.length; i++) { %>
          <tr id="<%= data[i]._id %>">
            <td><%= data[i].brandName %></td>
            <td>
                <div class="d-flex align-items-center justify-content-center"
                style="width: 40px; height: 40px; border-radius: 50%; overflow: hidden;">
                    <img 
                    src="/uploads/brand-images/<%= data[i].brandImage %>" 
                    alt="<%= data[i].brandName %>"
                    class="img-fluid rounded-circle"
                    style="width: 100%; height: auto;">
                </div>
            </td>
            <td>
                <% if (data[i].isBlocked === false) { %>
                <button
                  class="btn btn-danger block-btn"
                  data-id="<%= data[i]._id %>"
                  style="width: 80px"
                >
                  Block
                </button>
                <% } else { %>
                <button
                  class="btn btn-success unblock-btn"
                  data-id="<%= data[i]._id %>"
                  style="width: 80px"
                >
                  Unblock
                </button>
                <% } %>
              </td>
            <!-- <td>
              <button class="btn btn-secondary" style="width: 80px">
                <a
                  href="/admin/brands/edit-brand?id=<%= data[i]._id %>"
                  class="text-white"
                  style="text-decoration: none"
                  >Edit</a
                >
              </button>
            </td> -->
            <td>
              <% if (data[i].isDeleted === false) { %>
              <button
                class="btn btn-danger"
                style="width: 80px"
                onclick="deleteBrand('<%= data[i]._id %>')"
              >
                Delete
              </button>
              <% } else { %>
              <!-- If the product is deleted -->
              <button
                class="btn btn-success"
                style="width: 80px"
                onclick="restoreBrand('<%= data[i]._id %>')"
              >
                Restore
              </button>
              <% } %>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <!-- Pagination -->
      <div class="container mt-3 mb-3">
        <nav aria-label="Page navigation">
          <ul
            class="pagination justify-content-center mb-20"
            style="margin-right: 200px"
          >
            <% for(let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
            <% } %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>

<%- include('../../views/partials/admin/footer') %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
  $(document).on("click", ".block-btn", function () {
    var brandId = $(this).data("id");

    // Show confirmation dialog
    Swal.fire({
      title: "Are you sure?",
      text: "You are about to block this brand!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonText: "Yes, Block!",
      cancelButtonText: "No, Cancel",
      reverseButtons: true,
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
          type: "POST",
          url: "/admin/brands/block-brand",
          contentType: "application/json",  // Add this line to tell the server you're sending JSON
            data: JSON.stringify({ id: brandId }),
          success: function (response) {
            if (response.success) {
              Swal.fire({
                icon: "success",
                title: "Brand Blocked Successfully",
                showConfirmButton: false,
                timer: 1500,
              }).then(() => {
                location.reload(); // Reload the page to update the UI
              });
            } else {
              Swal.fire({
                icon: "error",
                title: "Error",
                text: "An error occurred while blocking the brand. Please try again.",
              });
            }
          },
          error: function () {
            Swal.fire({
              icon: "error",
              title: "Request Failed",
              text: "There was an issue connecting to the server. Please try again.",
            });
          },
        });
      } else {
        // If the user clicks Cancel
        Swal.fire("Cancelled", "Brand blocking was cancelled.", "info");
      }
    });
  });

  // Unblock User with Confirmation (optional)
  $(document).on("click", ".unblock-btn", function () {
    var brandId = $(this).data("id");

    // Show confirmation dialog
    Swal.fire({
      title: "Are you sure?",
      text: "You are about to unblock this brand!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonText: "Yes, Unblock!",
      cancelButtonText: "No, Cancel",
      reverseButtons: true,
    }).then((result) => {
      if (result.isConfirmed) {
        // If confirmed, make AJAX request to unblock user
        $.ajax({
          type: "POST",
          url: "/admin/brands/unblock-brand",
          data: { id: brandId },
          success: function (response) {
            if (response.success) {
              Swal.fire({
                icon: "success",
                title: "Brand Unblocked Successfully",
                showConfirmButton: false,
                timer: 1500,
              }).then(() => {
                location.reload(); // Reload the page to update the UI
              });
            } else {
              Swal.fire({
                icon: "error",
                title: "Error",
                text: "An error occurred while unblocking the brand. Please try again.",
              });
            }
          },
          error: function () {
            Swal.fire({
              icon: "error",
              title: "Request Failed",
              text: "There was an issue connecting to the server. Please try again.",
            });
          },
        });
      } else {
        // If the user clicks Cancel
        Swal.fire("Cancelled", "Brand unblocking was cancelled.", "info");
      }
    });
  });

  function deleteBrand(brandId) {
  Swal.fire({
    title: "Are you sure?",
    text: "This brand will be soft deleted.",
    icon: "warning",
    showCancelButton: true,
    confirmButtonColor: "#d33",
    cancelButtonColor: "#3085d6",
    confirmButtonText: "Yes, delete it!",
    cancelButtonText: "Cancel",
  }).then((result) => {
    if (result.isConfirmed) {
      $.ajax({
        type: "PATCH",
        url: `/admin/delete-brand/${brandId}`,
        success: function (response) {
          if (response.message === "Brand soft deleted successfully") {
            Swal.fire({
              icon: "success",
              title: "Brand deleted!",
              text: "The Brand has been soft deleted.",
              showConfirmButton: false,
              timer: 1500,
            }).then(() => {
              location.reload();
            });
          }
        },
        error: function () {
          Swal.fire({
            icon: "error",
            title: "Error",
            text: "There was an error deleting the brand.",
          });
        },
      });
    }
  });
}

function restoreBrand(brandId) {
  Swal.fire({
    title: "Are you sure?",
    text: "This brand will be restored.",
    icon: "info",
    showCancelButton: true,
    confirmButtonColor: "#3085d6",
    cancelButtonColor: "#d33",
    confirmButtonText: "Yes, restore it!",
    cancelButtonText: "Cancel",
  }).then((result) => {
    if (result.isConfirmed) {
      $.ajax({
        type: "PATCH",
        url: `/admin/restore-brand/${brandId}`,
        success: function (response) {
          if (response.message === "Brand restored successfully") {
            Swal.fire({
              icon: "success",
              title: "Brand Restored!",
              text: "The brand has been successfully restored.",
              showConfirmButton: false,
              timer: 1500,
            }).then(() => {
              location.reload();
            });
          }
        },
        error: function () {
          Swal.fire({
            icon: "error",
            title: "Error",
            text: "There was an error restoring the brand.",
          });
        },
      });
    }
  });
}

</script>
