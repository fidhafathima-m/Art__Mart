<head>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        /* General Body and Font Styling */
        body {
            font-family: 'Arial', sans-serif;
            color: #333;
            line-height: 1.6;
        }

        h3, h6 {
            font-family: 'Georgia', serif;
            font-weight: bold;
        }

        h3 {
            color: #2c3e50;
            font-size: 32px;
            margin-bottom: 20px;
        }

        h6 {
            color: #16a085;
            font-size: 20px;
        }

        /* Header Styling */
        .contact_title h3 {
            text-align: center;
            font-size: 38px;
            color: #34495e;
            padding-top: 20px;
        }

        /* Breadcrumb Styling */
        .breadcrumb__text {
            padding: 15px;
            border-radius: 5px;
        }

        .breadcrumb__links a {
            color: #2980b9 !important;
            text-decoration: none;
            font-weight: bold;
            margin-right: 5px;
        }

        .breadcrumb__links span {
            color: #7f8c8d;
        }

        /* Contact Section */
        .contact-section {
            background-color: #f4f6f6;
            padding: 50px 0;
        }

        .contact-section .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .contact-form {
            background-color: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .contact-form h3 {
            color: #2c3e50;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        .form-group input, .form-group textarea {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #ccc;
            font-size: 16px;
        }

        .form-group textarea {
            height: 150px;
        }

        .form-group button {
            background-color: #2980b9;
            color: #fff;
            border: none;
            padding: 12px 30px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
        }

        .form-group button:hover {
            background-color: #1abc9c;
        }

        .contact-info {
            text-align: center;
            margin-top: 50px;
        }

        .contact-info h6 {
            color: #16a085;
            font-size: 24px;
            margin-bottom: 15px;
        }

        .contact-info p {
            font-size: 16px;
            color: #7f8c8d;
        }

        /* Loading Overlay */
 /* Loading Overlay */
 #loadingOverlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      /* Semi-transparent black background */
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999;
      /* Ensure it appears above everything */
      display: none;
      /* Initially hidden */
    }

    #loadingSpinner {
      color: white;
    }


    </style>
</head>

<%- include('../../views/partials/admin/header') %>

<!-- Breadcrumb Section Begin -->
<section class="contact-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact_title">
                    <h3>Contact Us</h3>
                </div>
                <div class="breadcrumb__text">
                    <div class="breadcrumb__links">
                        <a href="/admin">Home</a>
                        <span>Contact</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Contact Form Section Begin -->
<section class="contact-form">
    <div class="container">
        <h3>We'd Love to Hear From You!</h3>
        <p>If you have any questions or need assistance, feel free to get in touch with us by filling out the form below.</p>

        <form method="POST" action="/admin/contact/submit">
            <div class="form-group">
                <label for="name">Full Name</label>
                <input type="text" id="name" name="name" placeholder="Enter your full name" required>
            </div>

            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" placeholder="Enter your email address" required>
            </div>

            <div class="form-group">
                <label for="subject">Subject</label>
                <input type="text" id="subject" name="subject" placeholder="Enter the subject" required>
            </div>

            <div class="form-group">
                <label for="message">Your Message</label>
                <textarea id="message" name="message" placeholder="Enter your message" required></textarea>
            </div>

            <div class="form-group">
                <button type="submit">Send Message</button>
            </div>
        </form>
    </div>
</section>
<!-- Contact Form Section End -->

<!-- Contact Information Section Begin -->
<section class="contact-info">
    <div class="container">
        <h6>Contact Information</h6>
        <p><strong>Email:</strong> support@artmart.com</p>
        <p><strong>Phone:</strong> +123 456 7890</p>
        <p><strong>Address:</strong> 123 Art Street, City, Country</p>
    </div>
</section>
<!-- Contact Information Section End -->

<!-- Loading Overlay -->
<div id="loadingOverlay">
    <div id="loadingSpinner" class="text-center">
      <div class="spinner-border" role="status">
        <span class="visually-hidden"></span>
      </div>
      <p class="text-white">Sending message...</p>
    </div>
  </div>
  


<%- include('../../views/partials/admin/footer') %>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function() {
        // Handle form submission
        $('form').submit(function(event) {
            event.preventDefault(); // Prevent the default form submission

            var formData = $(this).serialize(); // Serialize form data

           // Show loading overlay when form is submitted
        document.getElementById("loadingOverlay").style.display = "flex";

        // Disable the submit button while the request is being processed
        document.querySelector("button[type='submit']").disabled = true;

            // Perform AJAX request to send the form data to the server
            $.ajax({
                url: '/admin/contact/submit', // Your POST endpoint to handle the form
                type: 'POST',
                data: formData,
                success: function(response) {
                    document.getElementById("loadingOverlay").style.display = "none";
                    document.querySelector("button[type='submit']").disabled = false;

                    // If the response is success, show success message
                    if(response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Message Sent!',
                            text: 'Thank you for contacting us. We will get back to you shortly.',
                            showConfirmButton: false,
                            timer: 2000
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        // If there is an error, show error message
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Something went wrong. Please try again later.',
                        });
                    }
                },
                error: function(xhr, status, error) {
                    document.getElementById("loadingOverlay").style.display = "none";
                    document.querySelector("button[type='submit']").disabled = false; // Re-enable the button
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong. Please try again later.',
                    });
                }
            });
        });
    });
</script>
