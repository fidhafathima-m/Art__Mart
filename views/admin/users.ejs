<%- include('../../views/partials/admin/header') %>

<div class="wrapper">
  <%- include('../../views/partials/admin/sidebar') %>

  <div class="container">
    <h1 class="my-4">Manage Users</h1>

    <!-- Search Bar -->
    <form method="GET">
      <div class="input-group mb-3">
        <input
          type="text"
          class="form-control col-6"
          name="search"
          placeholder="Search by name, email, or mobile"
          aria-label="Search"
          aria-describedby="basic-addon2"
        />
        <button class="btn btn-primary" type="submit">Search</button>
      </div>
    </form>

    <!-- Table Container -->
    <div class="table-container">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody id="userTable">
          <% for(let i = 0; i < data.length; i++) { %>
          <tr>
            <td><%= data[i].name %></td>
            <td><%= data[i].email %></td>
            <td><%= data[i].phone %></td>
            <td>
              <% if (data[i].isBlocked === false) { %>
              <button
                class="btn btn-danger block-btn"
                data-id="<%= data[i]._id %>"
                style="width: 80px"
              >
                Block
              </button>
              <% } else { %>
              <button
                class="btn btn-success unblock-btn"
                data-id="<%= data[i]._id %>"
                style="width: 80px"
              >
                Unblock
              </button>
              <% } %>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <!-- Pagination -->
      <div class="container mt-3">
        <nav aria-label="Page navigation">
          <ul
            class="pagination justify-content-center mb-20"
            style="margin-right: 200px"
          >
            <% for(let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
            <% } %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>

<%- include('../../views/partials/admin/footer') %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
  // Block User with Confirmation
  $(document).on("click", ".block-btn", function () {
    var userId = $(this).data("id");

    // Show confirmation dialog
    Swal.fire({
      title: "Are you sure?",
      text: "You are about to block this user!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonText: "Yes, Block!",
      cancelButtonText: "No, Cancel",
      reverseButtons: true,
    }).then((result) => {
      if (result.isConfirmed) {
        // If confirmed, make AJAX request to block user
        $.ajax({
          type: "POST",
          url: "/admin/blockCustomer",
          data: { id: userId },
          success: function (response) {
            if (response.success) {
              Swal.fire({
                icon: "success",
                title: "User Blocked Successfully",
                showConfirmButton: false,
                timer: 1500,
              }).then(() => {
                location.reload(); // Reload the page to update the UI
              });
            } else {
              Swal.fire({
                icon: "error",
                title: "Error",
                text: "An error occurred while blocking the user. Please try again.",
              });
            }
          },
          error: function () {
            Swal.fire({
              icon: "error",
              title: "Request Failed",
              text: "There was an issue connecting to the server. Please try again.",
            });
          },
        });
      } else {
        // If the user clicks Cancel
        Swal.fire("Cancelled", "User blocking was cancelled.", "info");
      }
    });
  });

  // Unblock User with Confirmation (optional)
  $(document).on("click", ".unblock-btn", function () {
    var userId = $(this).data("id");

    // Show confirmation dialog
    Swal.fire({
      title: "Are you sure?",
      text: "You are about to unblock this user!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonText: "Yes, Unblock!",
      cancelButtonText: "No, Cancel",
      reverseButtons: true,
    }).then((result) => {
      if (result.isConfirmed) {
        // If confirmed, make AJAX request to unblock user
        $.ajax({
          type: "POST",
          url: "/admin/unblockCustomer",
          data: { id: userId },
          success: function (response) {
            if (response.success) {
              Swal.fire({
                icon: "success",
                title: "User Unblocked Successfully",
                showConfirmButton: false,
                timer: 1500,
              }).then(() => {
                location.reload(); // Reload the page to update the UI
              });
            } else {
              Swal.fire({
                icon: "error",
                title: "Error",
                text: "An error occurred while unblocking the user. Please try again.",
              });
            }
          },
          error: function () {
            Swal.fire({
              icon: "error",
              title: "Request Failed",
              text: "There was an issue connecting to the server. Please try again.",
            });
          },
        });
      } else {
        // If the user clicks Cancel
        Swal.fire("Cancelled", "User unblocking was cancelled.", "info");
      }
    });
  });
</script>
