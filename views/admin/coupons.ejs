<%- include('../../views/partials/admin/header') %>

<div class="wrapper">
  <%- include('../../views/partials/admin/sidebar') %>

  <div class="container">
    <h1 class="my-4">Manage Coupons</h1>

    <!-- Search Bar -->
    <form method="GET" class="d-flex justify-content-between mb-3">
      <div class="input-group col-md-8">
        <input
          type="text"
          class="form-control"
          name="search"
          placeholder="Search by name"
          aria-label="Search"
          aria-describedby="basic-addon2"
        />
        <button class="btn btn-primary" type="submit">Search</button>
      </div>

      <!-- Add Coupon Button -->
      <button class="btn btn-dark" style="width: 150px" type="button">
        <a
          href="/admin/add-coupon"
          class="text-white"
          style="text-decoration: none"
          >Add Coupon</a
        >
      </button>
    </form>

    <!-- Table Container -->
    <div class="table-container">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Coupon Name</th>
            <th>Offer Price</th>
            <th>Min Purchase Amount</th>
            <th>Created On</th>
            <th>Expire On</th>
            <th>Status</th>
            <th>List / Unlist</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody id="couponTable">
          <% for (let i = 0; i < coupons.length; i++) { %>
          <tr id="<%= coupons[i]._id %>">
            <td><%= coupons[i].name %></td>
            <td><%= coupons[i].offerPrice %></td>
            <td><%= coupons[i].minPurchaseAmount %></td>
            <td>
              <%= new Date(coupons[i].createdOn).toLocaleString('en-US') %>
            </td>
            <td>
              <%= new Date(coupons[i].expireOn).toLocaleString('en-US') %>
            </td>
            <td>
              <% if (coupons[i].isList) { %>
              <span
                class="badge rounded-pill alert-success"
                style="width: 60px"
              >
                Listed
              </span>
              <% } else { %>
              <span class="badge rounded-pill alert-danger" style="width: 60px">
                Unlisted
              </span>
              <% } %>
            </td>
            <td>
              <% if (coupons[i].isList) { %>
              <button
                class="btn btn-danger"
                style="width: 70px"
                onclick="toggleListing('<%= coupons[i]._id %>', false)"
              >
                Unlist
              </button>
              <% } else { %>
              <button
                class="btn btn-success"
                style="width: 70px"
                onclick="toggleListing('<%= coupons[i]._id %>', true)"
              >
                List
              </button>
              <% } %>
            </td>
            <td>
              <button class="btn btn-secondary" style="width: 80px">
                <a
                  href="/admin/edit-coupon?id=<%= coupons[i]._id %>"
                  class="text-white"
                  style="text-decoration: none"
                  >Edit</a
                >
              </button>
            </td>
            <td>
              <% if (!coupons[i].isDeleted) { %>
              <button
                class="btn btn-danger"
                style="width: 80px"
                onclick="deleteCoupon('<%= coupons[i]._id %>')"
              >
                Delete
              </button>
              <% } else { %>
              <button
                class="btn btn-success"
                style="width: 80px"
                onclick="restoreCoupon('<%= coupons[i]._id %>')"
              >
                Restore
              </button>
              <% } %>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <!-- Pagination -->
      <div class="container mt-3">
        <nav aria-label="Page navigation">
          <ul
            class="pagination justify-content-center mb-20"
            style="margin-right: 200px"
          >
            <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= (i === currentPage) ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
            <% } %>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</div>

<%- include('../../views/partials/admin/footer') %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script >
  function toggleListing(id, isList) {
  const url = isList ? "/admin/unlistCoupon" : "/admin/listCoupon";
  $.ajax({
    type: "GET",
    url: url,
    data: { id: id },
    success: function (response) {
      if (response.success) {
        Swal.fire({
          icon: "success",
          title: isList ? "Coupon Listed" : "Coupon Unlisted",
          showConfirmButton: false,
          timer: 1500,
        }).then(() => {
          location.reload();
        });
      }
    },
    error: function () {
      Swal.fire({
        icon: "error",
        title: "Request Failed",
        text: "There was an issue connecting to the server. Please try again.",
      });
    },
  });
}

function deleteCoupon(couponId) {
  Swal.fire({
    title: "Are you sure?",
    text: "This coupon will be soft deleted.",
    icon: "warning",
    showCancelButton: true,
    confirmButtonColor: "#d33",
    cancelButtonColor: "#3085d6",
    confirmButtonText: "Yes, delete it!",
    cancelButtonText: "Cancel",
  }).then((result) => {
    if (result.isConfirmed) {
      $.ajax({
        type: "PATCH",
        url: `/admin/delete-coupon/${couponId}`,
        success: function (response) {
          if (response.message === "Coupon soft deleted successfully") {
            Swal.fire({
              icon: "success",
              title: "Coupon deleted!",
              text: "The coupon has been soft deleted.",
              showConfirmButton: false,
              timer: 1500,
            }).then(() => {
              location.reload();
            });
          }
        },
        error: function () {
          Swal.fire({
            icon: "error",
            title: "Error",
            text: "There was an error deleting the coupon.",
          });
        },
      });
    }
  });
}

function restoreCoupon(couponId) {
  Swal.fire({
    title: "Are you sure?",
    text: "This coupon will be restored.",
    icon: "info",
    showCancelButton: true,
    confirmButtonColor: "#3085d6",
    cancelButtonColor: "#d33",
    confirmButtonText: "Yes, restore it!",
    cancelButtonText: "Cancel",
  }).then((result) => {
    if (result.isConfirmed) {
      $.ajax({
        type: "PATCH",
        url: `/admin/restore-coupon/${couponId}`,
        success: function (response) {
          if (response.message === "Coupon restored successfully") {
            Swal.fire({
              icon: "success",
              title: "Coupon Restored!",
              text: "The coupon has been successfully restored.",
              showConfirmButton: false,
              timer: 1500,
            }).then(() => {
              location.reload();
            });
          }
        },
        error: function () {
          Swal.fire({
            icon: "error",
            title: "Error",
            text: "There was an error restoring the coupon.",
          });
        },
      });
    }
  });
}

</script>
