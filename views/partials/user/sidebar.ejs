<!-- Font Awesome CDN for Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

<style>
  /* Container for entire page content */
  .page-container {
    display: flex;
    min-height: 100vh;
    flex-direction: column;
  }
  
  /* Sidebar styles */
  .sidebar {
    position: sticky;
    top: 0;
    left: 0;
    width: 200px; /* Default width for desktop */
    background-color: #f8f9fa;
    padding-top: 20px;
    transition: width 0.3s;
    z-index: 10; /* Ensure sidebar is above other content */
  }
  
  .sidebar a {
    display: flex;
    align-items: center;
    padding: 10px 15px;
    color: #000;
    text-decoration: none;
    margin-bottom: 10px;
  }
  
  .sidebar a i {
    margin-right: 10px;
  }
  
  .sidebar a.active {
    background-color: #007bff;
    color: white;
  }
  
  .sidebar a.active i {
    color: white;
  }
  
  /* Main content area */
  .content-wrapper {
    flex: 1;
    display: flex;
  }
  
  /* Footer styles */
  footer {
    width: 100%;
    background-color: #f8f9fa;
    padding: 20px 0;
    margin-top: auto; /* Push footer to bottom */
  }
  
  /* Mobile styles */
  @media (max-width: 760px) {
    .content-wrapper {
      flex-direction: column;
    }
  
    .sidebar {
      width: 50px; /* Smaller width for mobile */
      position: fixed;
      top: 0;
      bottom: 0;
      height: 100vh;
      overflow-y: auto; /* Allow scrolling if content is long */
      z-index: 20; /* High z-index to stay above other content */
    }
    
    .sidebar a {
      justify-content: center;
      padding: 10px;
    }
    
    .sidebar a span {
      display: none;
    }
    
    .sidebar a i {
      margin-right: 0;
    }
  
    /* Adjust main content to account for sidebar */
    .ml-5 {
      margin-left: 50px;
      width: calc(100% - 50px);
    }
  
    /* Ensure footer is always at the bottom */
    footer {
      position: static;
      width: 100%;
      margin-top: 0;
    }
  }
  </style>

<div class="page-container">
  <div class="content-wrapper">
<div class="col-md-3 sidebar pt-5" style="max-height: 600px;">
  <a href="/userProfile?section=dashboard" class="<%= currentPage === 'dashboard' ? 'active' : '' %> py-3" id="dashboardLink">
    <i class="fas fa-tachometer-alt"></i> <span>Profile</span>
  </a>
  <a href="/userProfile?section=addresses" class="<%= currentPage === 'addresses' ? 'active' : '' %> py-3" id="addressesLink">
    <i class="fas fa-address-book"></i> <span>My Addresses</span>
  </a>
  <a href="/userProfile?section=orders" class="<%= currentPage === 'orders' ? 'active' : '' %> py-3" id="ordersLink">
    <i class="fas fa-box"></i> <span>Orders</span>
  </a>
  <a href="/userProfile?section=wishlist" class="<%= currentPage === 'wishlist' ? 'active' : '' %> py-3" id="wishlistLink">
    <i class="bi bi-bag-heart"></i> <span>Wishlist</span>
  </a>
  <a href="/userProfile?section=wallet" class="<%= currentPage === 'wallet' ? 'active' : '' %> py-3" id="walletLink">
    <i class="fas fa-wallet"></i> <span>Wallet</span>
  </a>
  <a href="/userProfile?section=referrals" class="<%= currentPage === 'referrals' ? 'active' : '' %> py-3" id="referralsLink">
    <i class="fas fa-star"></i> <span>Referrals</span>
  </a>
  <a href="/logout" id="logout">
    <i class="fas fa-sign-out"></i> <span>Logout</span>
  </a>
</div>
  </div>