<%- include('../../views/partials/user/header') %>

<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header text-center">
          <h3>Order Placed Successfully!</h3>
        </div>
        <div class="card-body text-center">
          <div class="alert alert-success mt-3">
            <p>Your order has been placed successfully!</p>
            <p>Order ID: <%= order._id %></p>
            <p>Amount: &#8377; <%= order.finalAmount %></p>
            <p>Status: <%= order.status %></p>
          </div>

          <p>
            Thank you for shopping with us! You will receive a confirmation
            email with the details of your order.
          </p>

          <div class="text-center">
            <a href="/userProfile?section=orders" class="btn btn-primary mb-4">Go to Orders</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../../views/partials/user/footer') %>
