<%- include('../../views/partials/user/header') %>

<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header text-center">
          <h3>Order Failed</h3>
        </div>
        <div class="card-body text-center">
          <div class="alert alert-danger mt-3">
            <p>Unfortunately, your order could not be processed.</p>
            <p>Order ID: <%= order.orderId %></p>
            <p>Amount: &#8377; <%= order.finalAmount %></p>
            <p>Status: <%= order.status %></p>
          </div>

          <p>
            There was an issue with your payment. Please try again or choose a different payment method.
          </p>

          <div class="text-center">
            <a href="/userProfile?section=orders" class="btn btn-danger mb-4">View Orders</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../../views/partials/user/footer') %>
