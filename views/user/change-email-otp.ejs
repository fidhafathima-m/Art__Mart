            Swal.fire({
              icon: "error",
              title: "Invalid OTP",
              text: response.message,
            });
          }
        },
        error: function() {
          Swal.fire({
            icon: "error",
            title: "Error",
            text: "Failed to verify OTP, please try again.",
          });
        },
      });

      return false;
    }

    window.onload = function() {
      startTimer();
      document.getElementById("resend-otp").style.pointerEvents = "none";
      document.getElementById("resend-otp").style.color = "#B0BEC5";
    };
  </script>
</body>

</html>